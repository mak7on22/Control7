@model KR.Models.LoginUser

@{
    ViewBag.Title = "Вход";
}
<h2>Вход на сайт</h2>
<a asp-action="Register" asp-controller="Account">Регистрация</a>
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="LogUserEmail">Введите Email</label>
            <input type="text" asp-for="LogUserEmail" />
            <span asp-validation-for="LogUserEmail"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}