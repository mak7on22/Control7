@model KR.Models.RegisterUser
@{
    ViewBag.Title = "Регистрация";
}
<h2>Регистрация</h2>
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="RegUserName">Ваше Имя</label><br />
            <input type="text" asp-for="RegUserName" />
            <span asp-validation-for="RegUserName"></span>
        </div>
        <div>
            <label asp-for="RegUserFirstName">Ваша Фамилия</label><br />
            <input type="text" asp-for="RegUserFirstName" />
            <span asp-validation-for="RegUserFirstName"></span>
        </div>
        <div>
            <label asp-for="RegUserEmail">Введите Email</label><br />
            <input type="text" asp-for="RegUserEmail" />
            <span asp-validation-for="RegUserEmail"></span>
        </div>
        <div>
            <label asp-for="RegUserPhone">Введите Номер</label><br />
            <input type="text" asp-for="RegUserPhone" />
            <span asp-validation-for="RegUserPhone"></span>
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}